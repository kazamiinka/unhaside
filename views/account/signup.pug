.limiter
  .container-login100
    .wrap-login100
      .login100-form-title(style='background-image: url(login_style/images/bg-01.jpg);')
        span.login100-form-title-1
        img(style='width:10%' src='https://upload.wikimedia.org/wikipedia/id/9/95/Logo_UH.png')
        span.login100-form-title-1
          | Sign Up
      form#signup-form.login100-form.validate-form(method='POST')
        input(type='hidden' name='_csrf' value='_csrf')
        .wrap-input100.validate-input.m-b-26(data-validate='Username is required')
          span.label-input100 Username
          input#email.input100(type='email' name='email' placeholder='Email@unhas.ac.id' autofocus='' required='')
          span.focus-input100
        .wrap-input100.validate-input.m-b-18(data-validate='Password is required')
          span.label-input100 Password
          input#password.input100(type='password' name='password' placeholder='Password' required='')
          span.focus-input100
        .wrap-input100.validate-input.m-b-18(data-validate='Password is required')
          span.label-input100 Confirm Password
          input#confirmPassword.input100(type='password' name='confirmPassword' placeholder='Confirm Password' required='')
          span.focus-input100
        .container-login100-form-btn
          input.login100-form-btn(type='submit')
